<div id="home">
  <div class="container">
    <div class="row">
      <div class="col-8 offset-2">
        <h1>{{msg}}</h1>
        <h2>Search for a recipe:</h2>
        <p>Try searching by drink name or by ingredients</p>
        <input type="text" id="search-bar" placeholder="Seach for a drink!">
        <h2>Add a recipe</h2>
        <form class="clearfix mb-4" action="POST">
          <div class="form-group">
            <label for="example-text">Drink Name:</label>
            <input type="text" id="cocktail-text" class="form-control" aria-describedby="example-text" placeholder="Enter Cocktail Name">
          </div>
          <div class="form-group">
            <label for="cocktail-ingredient1">Drink Ingredients:</label>
            <textarea class="form-control" id="cocktail-ingredient1" aria-describedby="example-description" placeholder="Enter Recipe Ingredients"></textarea>
          </div>
          <div class="form-group">
            <label for="example-description">Steps:</label>
            <textarea class="form-control" id="recipe-steps" aria-describedby="example-description" placeholder="Enter Recipe steps"></textarea>
          </div>
          <button id="submit" class="btn btn-primary float-right">Submit</button>
        </form>
        <h3>Drinks:</h3>
        <ul id="example-list" class="list-group">
          {{#each examples}}
          <li data-id="{{this.id}}" class="list-group-item">
            <a href="example/{{this.id}}">{{this.text}}</a>
            <button class="btn btn-danger float-right delete">ï½˜</button>
          </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</div>

<script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.2.1/jquery.min.js"></script>
<script src="/js/index.js"></script>
